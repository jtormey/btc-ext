{
  "manifest_version": 2,
  "name": "SatoshiXT",
  "version": "0.0.0",
  "version_name": "dev-alpha",
  "description": "Chrome extension for convenient xpub access",
  "author": "Justin Tormey <jrtormey@gmail.com>",
  "icons": {},
  "permissions": [
    "tabs"
  ],
  "browser_action": {
    "default_title": "SatoshiXT",
    "default_popup": "index.html"
  },
  "background": {
    "persistent": false,
    "scripts": [
      "build/background.bundle.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "http://localhost/*"
      ],
      "js": [
        "build/content.bundle.js"
      ]
    }
  ]
}
